<section>
  <h3>Trainer Form</h3>
  <form action="/trainers/add" method="post" enctype="multipart/form-data">
    <fieldset>
      <label>
        Name
        <input name="name" placeholder="super cool trainer" required />
      </label>
      <label>
        Description
        <textarea name="description" required>
        I am a super cool trainer
        </textarea>
      </label>
      <label>
        Age
        <input type="number" name="age" value="18" required />
      </label>
      Image
      <label for="trainer-image">
        <input
          type="file"
          accept="image/*"
          id="trainer-image"
          name="trainer-image"
          required
        />
      </label>
    </fieldset>

    <button type="submit">Add</button>
  </form>
</section>
