<div class="grid">
  <div class="column">
    <% for(let i = items.length - 1; i >= 0; i--) { %> <% if(i % 3 === 0) { %>
    <%- include(`card`, { item: items[i] }); %> <% } %> <% } %>
  </div>
  <div class="column">
    <% for(let i = items.length - 1; i >= 0; i--) { %> <% if(i % 3 === 1) { %>
    <%- include(`card`, { item: items[i] }); %> <% } %> <% } %>
  </div>
  <div class="column">
    <% for(let i = items.length - 1; i >= 0; i--) { %> <% if(i % 3 === 2) { %>
    <%- include(`card`, { item: items[i] }); %> <% } %> <% } %>
  </div>
</div>
